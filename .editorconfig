# Editor configuration, see https://editorconfig.org
root = true

[*]
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
max_line_length = 120
tab_width = 4
ij_continuation_indent_size = 8

[{*.md, *.markdown}]
max_line_length = 80
trim_trailing_whitespace = false

[{*.ts, *.ats}]
max_line_length = 140

[{*.yml, *.yaml}]
indent_size = 2

[{*.bash, *.zsh, *.sh}]
indent_size = 2
tab_width = 2
